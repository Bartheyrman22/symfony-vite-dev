{% extends 'base.html.twig' %}

{% block title %}HelloController!{% endblock %}

{% block content %}
<div>
    <h1>Welcome vite with multiple builds !</h1>

    <h1>Assets section</h1>

    <div class="asset-box">
        <p>image imported via asset twig function, referenced by vite</p>
        <img src="{{ asset('assets/images/violin.jpg', 'build1')}}" alt="">
    </div>
    <div class="asset-box">
        <p>image 1 imported via js</p>
        <div id="vite-asset-js-container-1"></div>
    </div>
    <div class="asset-box">
        <p>image 2 imported via js</p>
        <div id="vite-asset-js-container-2"></div>
    </div>
    <div class="asset-box">
        <p>image imported via css</p>
        <div id="vite-asset-scss-container"></div>
    </div>
    <div class="asset-box">
        <p>image imported via nested css</p>
        <div id="vite-asset-scss-nested-container"></div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{{ vite_entry_link_tags('welcome') }}
{{ vite_entry_link_tags('multiple', {}, 'build2') }}
{{ vite_entry_link_tags('pageAssets', { attr: { 'data-foo': 'bar' }}) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ vite_entry_script_tags('welcome') }}
{{ vite_entry_script_tags('multiple', {}, 'build2') }}
{{ vite_entry_script_tags('pageAssets', { attr: { 'data-hello': 'world' }}) }}
{% endblock %}