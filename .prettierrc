{
    "$schema": "http://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": false,
    "tabWidth": 2,
    "overrides": [
        {
            "files": "translations/*.js",
            "options": {
                "singleQuote": false,
                "printWidth": 120
            }
        }
    ]
}
