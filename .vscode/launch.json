{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vite dev",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "-c",
        "vite.default.config.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/node_modules/vite-plugin-symfony/dist/*.js"
      ]
    },
    {
      "name": "Vite build",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      // "program": "${workspaceFolder}/extra/vite/packages/vite/dist/node/cli.js",
      "args": [
        "build",
        "-c",
        "vite.default.config.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/extra/vite-plugin-symfony/dist/*.js"
      ]
    },
    {
      "name": "Minimal Vite dev",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "-c",
        "vite.minimal.config.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/node_modules/vite-plugin-symfony/dist/*.js"
      ]
    },
    {
      "name": "Minimal Vite build",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "build",
        "-c",
        "vite.minimal.config.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/node_modules/vite-plugin-symfony/dist/*.js"
      ]
    },
    {
      "name": "Legacy Vite dev",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "-c",
        "vite.legacy.config.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/node_modules/vite-plugin-symfony/dist/*.js"
      ]
    },
    {
      "name": "Legacy Vite build",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "build",
        "-c",
        "vite.legacy.config.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/node_modules/vite-plugin-symfony/dist/*.js"
      ]
    },
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 0,
      "runtimeArgs": [
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug,develop",
        "XDEBUG_CONFIG": "client_port=${port}"
      }
    }
  ]
}